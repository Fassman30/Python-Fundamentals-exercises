import random
def adivina_numero_limite() -> None :
    numero_random=random.randint(1,10)
    intentos_maximos = 5
    intento=0
    while intento< intentos_maximos:
          intento+=1       
          try: 
              numero_usuario = int(input(f"Intento {intento}/{intentos_maximos}: Digita tu nÃºmero: "))
              print(f"los intentos fueron {intento}") 
              if numero_random < numero_usuario:
                  print("el numero es menor sigue intentando")
                  continue
              elif numero_random > numero_usuario:
                  print("el numero es mucho mayor sigue intentando")
                  continue
              else:
                  print(f"Â¡Felicidades! Â¡Adivinaste el nÃºmero {numero_random} en {intento} intentos! ğŸ‰")
                  return               
          except ValueError:
              print("el numero no es valido")  
    print(f"\nÂ¡Se acabaron los intentos! El nÃºmero secreto era {numero_random}. Â¡Mejor suerte la prÃ³xima! ğŸ˜”")       

adivina_numero_limite()
          
              
                      
