def sumar_hasta_1000() -> int:
    suma=0
    contador=0
    while True:
      try:
           numero=int(input("ingrese un numero:"))
           if numero > 1000:
              break
           suma+=numero
           contador+=1
      except ValueError:
          print("dijite un numero valido por favor :  ")
          continue
    print(f"los numeros contados son : {contador}")
    return suma
    
total_suma=sumar_hasta_1000()
print(f"la suma total es de {total_suma}")
            
